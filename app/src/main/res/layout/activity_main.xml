<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:elevation="5dp"
        android:background="?attr/colorPrimaryDark" />
    <android.support.v4.widget.DrawerLayout
        android:id="@+id/drawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:clickable="false"
        tools:context=".MainActivity">
        <RelativeLayout
            android:id="@+id/content_frame"
            android:layout_width="match_parent"
            android:padding="25dp"
            android:clickable="false"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/rel_1"
                android:layout_centerHorizontal="true"
                android:paddingRight="50dp"
                android:paddingLeft="50dp"
                android:weightSum="2"
                android:layout_height="@dimen/abc_action_bar_default_height_material">
                <ImageView
                    android:layout_width="match_parent"
                    android:src="@drawable/ic_pulse_rate"
                    android:id="@+id/pulse_rate_text"
                    android:layout_weight="1"
                    android:layout_height="match_parent" />
                <TextView
                    android:layout_width="match_parent"
                    android:text="93"
                    android:layout_weight="1"
                    android:id="@+id/pulse_rate_info"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:layout_height="match_parent" />
                </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/rel_2"
                android:layout_below="@id/rel_1"
                android:layout_centerHorizontal="true"
                android:paddingRight="50dp"
                android:paddingLeft="50dp"
                android:weightSum="2"
                android:layout_height="@dimen/abc_action_bar_default_height_material">
                <ImageView
                    android:layout_width="match_parent"
                    android:src="@drawable/ic_time"
                    android:id="@+id/movement_text"
                    android:layout_weight="1"
                    android:layout_height="match_parent" />
                <TextView
                    android:layout_width="match_parent"
                    android:text="12/11/1993Z 23:23:23T"
                    android:layout_weight="1"
                    android:id="@+id/movement_info"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/rel_3"
                android:layout_below="@id/rel_2"
                android:layout_centerHorizontal="true"
                android:paddingRight="50dp"
                android:paddingLeft="50dp"
                android:weightSum="2"
                android:layout_height="@dimen/abc_action_bar_default_height_material">
                <ImageView
                    android:layout_width="match_parent"
                    android:src="@drawable/ic_question_mark"
                    android:id="@+id/reason_text"
                    android:layout_weight="1"
                    android:layout_height="match_parent" />
                <TextView
                    android:layout_width="match_parent"
                    android:text="93"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:id="@+id/reason_info"
                    android:gravity="center"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <ImageView
                android:src="@drawable/ic_map_icon"
                android:textColor="@android:color/white"
                android:layout_width="wrap_content"
                android:id="@+id/map_location_info"
                android:onClick="clickEvent"
                android:layout_below="@id/rel_3"
                android:layout_centerHorizontal="true"
                android:layout_height="64dp" />
            <com.melnykov.fab.FloatingActionButton
                android:id="@+id/fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="bottom"
                android:layout_margin="16dp"
                android:src="@drawable/check_up"
                fab:elevation="5dp"
                fab:fab_shadow="true"
                fab:fab_colorNormal="@color/bt1_primary"
                fab:fab_colorPressed="@color/bt1_primary_pressed"
                fab:fab_colorRipple="@color/bt1_ripple" />
        </RelativeLayout>
        <ListView
            android:id="@+id/left_drawer"
            android:paddingTop="50dp"
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:background="@color/primary_material_light"
            android:choiceMode="singleChoice"
            android:divider="@android:color/transparent"
            android:dividerHeight="0dp" />
    </android.support.v4.widget.DrawerLayout>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:weightSum="2.4"
    tools:context=".AboutActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_about"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:elevation="5dp"
        android:background="?attr/colorPrimaryDark" />
    <ImageView
        android:layout_marginTop="10dp"
        android:layout_width="144sp"
        android:layout_height="144sp"
        android:id="@+id/aboutImageView"
        android:layout_gravity="center"
        android:src="@drawable/ic_launcher"
        android:contentDescription="@string/logo"/>
    <TextView
        android:layout_width="fill_parent"
        android:scrollbars="vertical"
        android:layout_height="0dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/aboutText"
        android:id="@+id/aboutTextView"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_weight="1.7"
        android:autoLink="web"
        />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="0.3"
        android:gravity="center_vertical|center_horizontal">
        <ImageView
            android:id="@+id/about_twitter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:onClick="onOpenTwitterClick"
            android:padding="6dip"
            android:src="@drawable/ic_twitter_logo_blue"/>
    </LinearLayout>
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/aboutFooter"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:layout_weight="0.4"
        android:id="@+id/aboutFooterTextView"/>
</LinearLayout>